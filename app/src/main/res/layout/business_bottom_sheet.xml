<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/business_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/colorBackground"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:padding="@dimen/margin_material"
    app:behavior_hideable="false"
    app:behavior_peekHeight="70dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <!-- Optional: Add a drag handle visual cue -->
    <View
        android:layout_width="32dp"
        android:layout_height="4dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp"
        android:background="@android:color/darker_gray" /> <!-- Customize color -->

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/bottom_sheet_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="Your Title Here"
        android:textAppearance="?attr/textAppearanceHeadline6" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/bottom_sheet_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="Business Icon"
            android:src="@drawable/coffee_green_24"
            app:tint="?attr/colorPrimary" /> <!-- Example icon, replace with yours -->
        <!-- Make sure you have ic_info_24.xml (vector drawable) in your res/drawable -->


        <TextView
            android:id="@+id/bottom_sheet_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:text="Your detailed business description goes here. It can be multiple lines long."
            android:textAppearance="?attr/textAppearanceBody1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/changing_table_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="Business Icon"
            android:src="@drawable/baby_changing_station_green_24"
            app:tint="?attr/colorPrimary" /> <!-- Example icon, replace with yours -->
        <!-- Make sure you have ic_info_24.xml (vector drawable) in your res/drawable -->


        <TextView
            android:id="@+id/changing_table_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:textAppearance="?attr/textAppearanceBody1" />
    </LinearLayout>

    <!-- You can add more views here if needed -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="64dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="More content can go here and will scroll."
        android:textColor="@android:color/darker_gray" />

</LinearLayout>
