<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/business_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/colorBackground"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:padding="@dimen/margin_material"
    app:behavior_hideable="false"
    app:behavior_peekHeight="70dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <!-- Optional: Add a drag handle visual cue -->
    <View
        android:layout_width="32dp"
        android:layout_height="4dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp"
        android:background="@android:color/darker_gray" /> <!-- Customize color -->

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/business_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="Your Title Here"
        android:textAppearance="?attr/textAppearanceHeadline6" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/business_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_thin"
        android:drawableStart="@drawable/coffee_green_24"
        android:drawablePadding="@dimen/margin_thin"
        android:drawableTint="?attr/colorPrimary"
        android:gravity="center_vertical"
        android:text="Your detailed business description goes here. It can be multiple lines long."
        android:textAppearance="?attr/textAppearanceBody1" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/changing_table_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_thin"
        android:drawableStart="@drawable/baby_changing_station_green_24"
        android:drawablePadding="@dimen/margin_thin"
        android:drawableTint="?attr/colorPrimary"
        android:gravity="center_vertical"
        android:text="Your detailed business description goes here. It can be multiple lines long."
        android:textAppearance="?attr/textAppearanceBody1" />

    <!-- You can add more views here if needed -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="64dp" />

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="More content can go here and will scroll."
        android:textColor="@android:color/darker_gray" />

</LinearLayout>
